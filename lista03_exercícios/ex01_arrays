// Exemplo de Criação de Matrizes

let linhas = 2;
let colunas = 3;

let matriz = [];

for (let i = 0; i < linhas; i++) {
  matriz[i] = []; // cria a linha
  for (let j = 0; j < colunas; j++) {
    console.log(matriz[i][j] = `L${i} C${j}`); // valor formatado com linha e coluna
  }
}

// console.log("Matriz:");
matriz.forEach(linha => console.log(linha));




